<launch>

  <!-- This file makes it easy to include the settings for sensor managers -->  
  <arg name="sensor_type" default="" />
  <rosparam if="$(eval arg('sensor_type') != '')" command="load" file="$(find xarm7_moveit_config)/config/sensors_d435i_$(arg sensor_type).yaml" />

  <!-- Params for the octomap monitor -->
  <!--  <param name="octomap_frame" type="string" value="some frame in which the robot moves" /> -->
  <param name="octomap_frame" type="string" value="camera_link" />
  <param name="octomap_resolution" type="double" value="0.025" />
  <param name="max_range" type="double" value="0.8" />

  <!-- Load the robot specific sensor manager; this sets the moveit_sensor_manager ROS parameter -->
  <arg name="moveit_sensor_manager" default="xarm7" />
  <include file="$(find xarm7_moveit_config)/launch/$(arg moveit_sensor_manager)_moveit_sensor_manager.launch.xml" />
  
</launch>
